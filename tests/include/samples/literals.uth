	TOKEN_KIND_LITERAL_I8,
	TOKEN_KIND_LITERAL_I8,
	TOKEN_KIND_LITERAL_I16,
	TOKEN_KIND_LITERAL_I16,
	TOKEN_KIND_LITERAL_I16,
	TOKEN_KIND_LITERAL_I32,
	TOKEN_KIND_LITERAL_I32,
	TOKEN_KIND_LITERAL_I32,
	TOKEN_KIND_LITERAL_I64,
	TOKEN_KIND_LITERAL_I64,
	TOKEN_KIND_LITERAL_I64,

	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U16,
	TOKEN_KIND_LITERAL_U16,
	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U32,
	TOKEN_KIND_LITERAL_U32,
	TOKEN_KIND_LITERAL_U8,
	TOKEN_KIND_LITERAL_U64,
	TOKEN_KIND_LITERAL_U64,

	TOKEN_KIND_LITERAL_F32,
	TOKEN_KIND_LITERAL_F32,
